#define ZMK_POINTING_DEFAULT_MOVE_VAL 800
#define ZMK_POINTING_DEFAULT_SCRL_VAL 120

#include <input/processors.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

&mt {
    flavor = "balanced";
    quick-tap-ms = <0>;
};

&msc {
    delay-ms = <0>;
    trigger-period-ms = <10>;
    time-to-max-speed-ms = <0>;
    acceleration-exponent = <0>;
};

/ {
    input_processors {
        zip_wheel_scaler: zip_wheel_scaler {
            compatible = "zmk,input-processor-scaler";
            #input-processor-cells = <2>;
            type = <INPUT_EV_REL>;
            codes = <INPUT_REL_WHEEL>;
            track-remainders;
        };
    };
};

&msc_input_listener {
    warp {
        layers = <0>;
        input-processors = <&zip_wheel_scaler 4 1>;
    };

    precision {
        layers = <1>;
        input-processors = <&zip_wheel_scaler 1 2>;
    };
};

/ {
    behaviors {
        rot_kp: sensor_rotate_kp {
            compatible = "zmk,behavior-sensor-rotate-var";
            #sensor-binding-cells = <2>;
            bindings = <&kp>, <&kp>;
        };

        td_lang: td-lang {
            compatible = "zmk,behavior-tap-dance";
            label = "TD_LANG";
            #binding-cells = <0>;

            // 連打の締切を調整。200ms前後が標準。遅い/速いと感じたら微調整。

            tapping-term-ms = <220>;

            // 単タップ → LANG1、ダブルタップ → LANG2

            bindings = <&kp LANG1>, <&kp LANG2>;
        };

        mouse_click: mouse_button_kp {
            compatible = "zmk,behavior-sensor-rotate-var";
            #sensor-binding-cells = <2>;
            bindings = <&mkp>, <&mkp>;
        };

        mouse_scrl: mouse_wheel_scrl {
            compatible = "zmk,behavior-sensor-rotate-var";
            #sensor-binding-cells = <2>;
            bindings = <&msc>, <&msc>;

            tap-ms = <10>;
        };

        c_for_prtsc: c_for_prtsc {
            compatible = "zmk,behavior-tap-dance";
            label = "C_FOR_PRTSC";
            #binding-cells = <0>;
            bindings = <&kp C>, <&kp PRINTSCREEN>;
        };

        macro_w_sshot: macro_w_sshot {
            compatible = "zmk,behavior-macro";
            label = "Win Screenshot Macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LGUI &kp LSHFT>,
                <&macro_tap>,
                <&kp S>,
                <&macro_release>,
                <&kp LGUI &kp LSHFT>;
        };

        macro_m_sshot: macro_m_sshot {
            compatible = "zmk,behavior-macro";
            label = "Mac Screenshot Macro";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LGUI &kp LSHFT>,
                <&macro_tap>,
                <&kp N4>,
                <&macro_release>,
                <&kp LGUI &kp LSHFT>;
        };

        macro_w_TMute: macro_w_TMute {
            compatible = "zmk,behavior-macro";
            label = "Win Teams Mic Mute";
            #binding-cells = <0>;
            bindings =
                <&macro_press>,
                <&kp LGUI &kp LALT>,
                <&macro_tap>,
                <&kp K>,
                <&macro_release>,
                <&kp LGUI &kp LALT>;
        };
    };

    macros {
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp ESCAPE       &kp Q                 &kp W     &kp E           &kp R        &kp T                                   &kp Y         &kp U        &kp I      &kp O       &kp P      &kp BACKSPACE
&kp LC(TAB)      &kp A                 &kp S     &kp D           &kp F        &kp G                                   &kp H         &kp J        &kp K      &kp L       &kp SEMI   &kp SQT
&kp LCTRL        &kp Z                 &kp X     &c_for_prtsc    &kp V        &kp B      &bt BT_NXT    &kp C_AC_COPY  &kp N         &kp M        &kp COMMA  &kp PERIOD  &kp SLASH  &kp RCTRL
&kp RIGHT_SHIFT  &lt 3 K_CONTEXT_MENU  &kp LGUI  &mt LALT SPACE  &lt 1 SPACE  &kp SPACE                               &kp KP_ENTER  &lt 2 SPACE  &td_lang   &kp UP      &kp DOWN   &kp RC(C)
            >;

            sensor-bindings =
                <&mouse_scrl SCRL_UP SCRL_DOWN>,
                <&rot_kp RIGHT LEFT>;
        };

        layer_1 {
            bindings = <
&trans  &trans        &trans          &kp UP_ARROW    &trans           &trans                    &trans           &kp EQUAL         &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &trans       &kp DEL
&trans  &trans        &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT_ARROW  &trans                    &kp TILDE        &kp MINUS         &kp GRAVE             &trans                 &kp HOME     &kp PAGE_UP
&trans  &bt BT_SEL 0  &bt BT_SEL 1    &bt BT_SEL 2    &bt BT_SEL 3     &trans  &trans    &trans  &kp EXCLAMATION  &kp LEFT_BRACKET  &kp RIGHT_BRACKET     &trans                 &kp END      &mt PAGE_DOWN PAGE_DOWN
&trans  &trans        &trans          &trans          &trans           &trans                    &trans           &trans            &trans                &bootloader            &bootloader  &bootloader
            >;

            sensor-bindings = <&rot_kp C_VOL_UP C_VOL_DN    &mouse_scrl SCRL_UP SCRL_DOWN>;
        };

        layer_2 {
            bindings = <
&trans  &kp EXCL  &kp AT  &kp HASH  &kp DOLLAR  &kp PERCENT                    &kp CARET  &kp AMPERSAND  &kp ASTERISK  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &kp PIPE
&trans  &trans    &trans  &trans    &trans      &trans                         &trans     &trans         &trans        &trans                &trans                 &trans
&trans  &trans    &trans  &trans    &trans      &trans       &trans    &trans  &trans     &trans         &trans        &trans                &trans                 &trans
&trans  &trans    &trans  &trans    &trans      &trans                         &trans     &trans         &trans        &trans                &trans                 &trans
            >;

            sensor-bindings = <&rot_kp C_VOL_UP C_VOL_DN>, <&rot_kp UP DOWN>;
        };

        layer_3 {
            bindings = <
&trans  &kp F1   &kt F2   &kp F3  &kp F4  &kp F5                     &kp NUMBER_7  &kp N8        &kp N9        &kp PERCENT    &kp KP_ASTERISK  &kp EQUAL
&trans  &kp F6   &kp F7   &kp F8  &kp F9  &kp F10                    &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &kp AMPERSAND  &kp KP_MINUS     &trans
&trans  &kp F11  &kp F12  &trans  &trans  &trans   &trans    &trans  &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &kp BACKSLASH  &kp KP_PLUS      &kp KP_SLASH
&trans  &trans   &trans   &trans  &trans  &trans                     &trans        &kp NUMBER_0  &kp PERIOD    &kp COMMA      &kp KP_DOT       &kp COLON
            >;

            sensor-bindings = <&rot_kp C_VOL_UP C_VOL_DN    &mouse_click MB5 MB4>;
        };

        layer_4 {
            bindings = <
&trans  &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                          &kp F12  &kp F7  &kp F8  &kp F9  &trans  &trans
&trans  &trans        &trans        &trans        &trans        &trans                                &kp F11  &kp F4  &kp F5  &kp F6  &trans  &trans
&trans  &trans        &trans        &trans        &trans        &trans          &bt BT_CLR    &trans  &kp F10  &kp F1  &kp F2  &kp F3  &trans  &trans
&trans  &trans        &trans        &trans        &trans        &bt BT_CLR_ALL                        &trans   &trans  &trans  &trans  &trans  &trans
            >;

            sensor-bindings = <&rot_kp C_VOL_UP C_VOL_DN    &rot_kp PG_UP PG_DN>;
        };
    };
};
